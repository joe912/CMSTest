@{
    ViewBag.Title = "Contact Us";
}


<div class="col-xs-12">
    <h2>@ViewBag.Title.</h2>
    <h4>Complete this form and we will get in touch</h4>

    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label for="input1" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="input1" placeholder="Your name">
            </div>
        </div>
        <div class="form-group">
            <label for="input2" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="input2" placeholder="Your Email">
            </div>
        </div>
        <div class="form-group">
            <label for="input3" class="col-sm-2 control-label">Telephone</label>
            <div class="col-sm-10">
                <input type="tel" class="form-control" id="input3" placeholder="Your telephone">
            </div>
        </div>
        <div class="form-group">
            <label for="input4" class="col-sm-2 control-label">Message</label>
            <div class="col-sm-10">
                <textarea id="input4"  class="form-control" placeholder="Your message"></textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
</div>


@section scripts
{
    <script>

        $(function () {
            function stripTrailingSlash(str) {
                if (str.substr(-1) == '/') {
                    return str.substr(0, str.length - 1);
                }
                return str;
            }

            var url = window.location.pathname;
            var activePage = stripTrailingSlash(url);

            var x = $('.nav li a').length;
            console.log("nav length = " + x);

            $('.nav li a').each(function () {
                var currentPage = stripTrailingSlash($(this).attr('href'));

                if (activePage == currentPage) {
                    $(this).parent().addClass('active');
                }
            });
        });
    </script>
}
